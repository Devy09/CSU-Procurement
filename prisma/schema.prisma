datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String  @id @default(uuid())
  clerkId     String  @unique
  email       String  @unique
  fullName    String?
  imageUrl    String?
  department  String?
  section     String?
  alobsNo     String?
  saiNo       String?
  role        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id            Int     @id @default(autoincrement())
  description   String
  unitCost      Float
  category      String
}
